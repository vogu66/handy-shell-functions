#!/bin/bash

source ~/.functions

ask()
{
	echo
	read -p "Do you want to kill $1?" -n 1 -r
	echo

	if [[ $REPLY =~ ^[Yy]$ ]]
	then
		kil $1
		return 0
	fi
}

internet=$(ask nm-applet);
if (! $internet)
then
	kil Discord;
	kil caprine;
	kil skype;
else
	ask Discord;
	ask caprine;
	ask skype;
fi

ask redshift;
ask shalarm;
